@model StudentDetails.Models.ViewModels.EditStudentRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Student Details</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="id" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mb-3">
            <label class="form-label">FirstName</label>
            <input type="text" id="firstName" class="form-control" asp-for="FirstName" />
        </div>

        <div class="mb-3">
            <label class="form-label">LastName</label>
            <input type="text" id="lastName" class="form-control" asp-for="LastName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" id="address" class="form-control" asp-for="Address" />
        </div>

        <div class="mb-3">

            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Update</button>
                <button class="btn btn-danger ms-2" type="submit"
                asp-area=""
                asp-controller="Student"
                asp-action="Delete"
                >Delete</button>
            </div>
        </div>




    </form>
</div>
